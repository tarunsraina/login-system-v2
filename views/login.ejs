<%- include('header') -%>

<h1><center>Login page</center></h1>

<h5>Registration successful , please use your registration details to login here</h5>
<div class="text-center center-div" id="login">

    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold">Login</h2>
            
        <% if(locals.logout) { %>
                <div class="alert alert-success text-center">
                    <%= logout %>
                </div>
        <% } %>
        </div>
        <form action="/route/login" method="post">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="loginemail">
                <small class="form-text text-muted text-left"> email address</small>          
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="loginpassword" placeholder="password">
            </div>
            <br>
            <button class="btn btn-success" id="submit-btn">Submit</button>
        </form>
    </div>
</div>
<%- include('footer') -%>
